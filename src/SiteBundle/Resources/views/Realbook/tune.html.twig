{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1>{{ tune.title }}</h1>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-4">
            <div class="row">
                <div class="col-lg-12">
                    <h2>{{ realbook.name }}</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <a class="glyphicon glyphicon-triangle-left" href="{{ path('site_realbook') }}">{% trans %}back to tune list{% endtrans %}</a>
                </div>
            </div>
            {% if versions|length > 0 %}
                <div>
                    <h3>Other version</h3>
                    <ul>
                        {%  for version in versions %}
                            <li>
                                <a href="{{ path('site_realbook_tune',{ tune:tune.title, realbook:version.realbookName }) }}">{{ tune.title }} â€¢ {{ version.indexName }}</a>
                            </li>
                        {%  endfor %}
                    </ul>
                </div>
            {% endif %}
        </div>
        <div class="col-lg-8 text-center">
            <div class="row">
                <a class="glyphicon glyphicon-download-alt" href="{{ path('site_realbook_download',{ tune:tune.title, realbook:realbook.name }) }}">
                    {% trans %}download{% endtrans %}</a>
            </div>
            <div class="row">
            <img class="img-responsive img-thumbnail"  src="{{ asset('bundles/site/realbooks/'~img) }}" />
            </div>
        </div>
    </div>


{% endblock %}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>

    {{ sonata_seo_title() }}
    {{ sonata_seo_metadatas() }}

    {% image '@SiteBundle/Resources/public/images/favicon.ico' %}
    <link rel="icon" type="image/x-icon" href="{{ asset_url }}" />
    {% endimage %}

    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/site/js/jquery-2.2.2.min.js') }}"></script>
    {% javascripts '@SiteBundle/Resources/public/js/*' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% stylesheets '@SiteBundle/Resources/public/css/*.css' filter="cssrewrite"  %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    <link rel="stylesheet" type="text/css"
          href="https://fonts.googleapis.com/css?family=Rubik">

</head>
<body onload="jnSynth.init();">
<div class="wrapper">
    <div id="header">
        {% image '@SiteBundle/Resources/public/images/jolineck.png' %}
        <a href="{{ path('site_homepage') }}">
            <img id="logo" src="{{ asset_url }}" alt="Logo" />
        </a>
        {% endimage %}

        <div id="menu">
            <ul>
                <li><a href="{{ path('site_homepage') }}">Home</a></li>
                <li><a href="{{ path('site_scale_index') }}">Scales</a></li>
                <li><a href="{{ path('site_realbook') }}">Realbooks</a></li>
            </ul>
        </div>

        {#
        <div id="login">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <a href="{{ path('fos_user_security_logout') }}">logout</a>
            {% else %}
                {{ render(controller("FOSUserBundle:Security:login")) }}
            {% endif %}
        </div>
        #}
        {% if app.environment == "prod"  %}
        <div id="add">
            <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
            <!-- jolineck -->
            <ins class="adsbygoogle"
                 style="display:inline-block;width:728px;height:90px"
                 data-ad-client="ca-pub-2677445990102112"
                 data-ad-slot="9349218863"></ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>
        {% endif %}
        <div id="contentSession">
            {{ render(controller("SiteBundle:Session:Index")) }}
        </div>
    </div>



    <div id="content">
        {% block body %}
        {% endblock %}
        <div id="contentQuote">
            {{ render(controller("SiteBundle:Quote:Random")) }}
        </div>
    </div>
    <div class="push"></div>
</div>
<div id="footer">
    {% image '@SiteBundle/Resources/public/images/jolineck.png' %}
    <img id="logofooter" src="{{ asset_url }}" alt="Logo" />
    {% endimage %}

    <p>jolineck is created by <a href="http://www.lil-works.com">lil-works</a> â€¢ 2016</p>
</div>
{% if app.environment == "prod"  %}
<script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-85672159-1', 'auto');
    ga('send', 'pageview');

</script>
{% endif %}
</body>
</html>